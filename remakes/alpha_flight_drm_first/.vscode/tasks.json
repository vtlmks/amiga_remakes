{
	"version": "2.0.0",
	"tasks": [
		{
		"label": "Build Release",
		"type": "shell",
		"command": "./build.sh",
		"group": { "kind": "build", "isDefault": true },
		"problemMatcher": "$gcc",
		"presentation": {
			"echo": true,
			"reveal": "always",
			"focus": false,
			"clear": true,
			"panel": "shared",
			"showReuseMessage": false
		}
		},
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "./build.sh debug",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": "$gcc",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"clear": true,
				"panel": "shared",
				"showReuseMessage": false
			}
		},
		{
			"label": "runExecutable",
			"type": "shell",
			"command": "./mknes",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"clear": true,
				"panel": "shared",
				"showReuseMessage": false
			}
		}
	]
}
